                            android:layout_weight="1"
                            android:background="@drawable/harf"
                            android:gravity="center"
                            android:text="H"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/ButtonI"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/ButtonH"
                            android:layout_weight="1"
                            android:background="@drawable/harf"
                            android:gravity="center"
                            android:text="I"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/ButtonJ"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/ButtonI"
                            android:layout_weight="1"
                            android:background="@drawable/harf"
                            android:gravity="center"
                            android:text="J"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/ButtonK"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/ButtonJ"
                            android:layout_weight="1"
                            android:background="@drawable/harf"
                            android:gravity="center"
                            android:text="K"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/ButtonL"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/ButtonK"
                            android:layout_weight="1"
                            android:background="@drawable/harf"
                            android:gravity="center"
                            android:text="L"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/harf3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:weightSum="6" >

                        <Button
                            android:id="@+id/ButtonM"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
