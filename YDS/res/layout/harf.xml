<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#318DF2" >

    <LinearLayout
        android:id="@+id/pnl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:weightSum="6" >

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="3" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="#318DF2"
                android:gravity="center"
                android:text="YDS - EN ÇOK ÇIKAN 1000 KELİME REHBERİ"
                android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size"
                 />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pnl3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/pnl1"
            android:layout_weight="3" >

            <ScrollView
                android:id="@+id/scroll_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:scrollbars="vertical" >

                <LinearLayout
                    android:id="@+id/bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/harf1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:weightSum="6" >

                        <Button
                            android:id="@+id/ButtonA"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentTop="true"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/harf"
                            android:gravity="center"
                            android:text="A"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/ButtonB"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/ButtonA"
                            android:layout_weight="1"
                            android:background="@drawable/harf"
                            android:gravity="center"
                            android:text="B"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/ButtonC"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/ButtonB"
                            android:layout_weight="1"
                            android:background="@drawable/harf"
                            android:gravity="center"
                            android:text="C"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/ButtonD"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/ButtonC"
                            android:layout_weight="1"
                            android:background="@drawable/harf"
                            android:gravity="center"
                            android:text="D"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/ButtonE"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/ButtonD"
                            android:layout_weight="1"
                            android:background="@drawable/harf"
                            android:gravity="center"
                            android:text="E"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/ButtonF"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/ButtonE"
                            android:layout_weight="1"
                            android:background="@drawable/harf"
                            android:gravity="center"
                            android:text="F"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/harf2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/bottom"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:weightSum="6" >

                        <Button
                            android:id="@+id/ButtonG"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentTop="true"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/harf"
                            android:gravity="center"
                            android:text="G"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/ButtonH"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
