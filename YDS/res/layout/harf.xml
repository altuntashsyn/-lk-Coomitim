                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/ButtonS"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/ButtonR"
                            android:layout_weight="1"
                            android:background="@drawable/harf"
                            android:gravity="center"
                            android:text="S"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/harf4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:weightSum="6" >

                        <Button
                            android:id="@+id/ButtonT"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentTop="true"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/harf"
                            android:gravity="center"
                            android:text="T"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/ButtonU"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/ButtonT"
                            android:layout_weight="1"
                            android:background="@drawable/harf"
                            android:gravity="center"
                            android:text="U"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/ButtonV"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/ButtonU"
                            android:layout_weight="1"
                            android:background="@drawable/harf"
                            android:gravity="center"
                            android:text="V"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/ButtonW"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/ButtonV"
                            android:layout_weight="1"
                            android:background="@drawable/harf"
                            android:gravity="center"
                            android:text="W"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/ButtonY"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/ButtonW"
                            android:layout_weight="1"
                            android:background="@drawable/harf"
                            android:gravity="center"
                            android:text="Y"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/ButtonZ"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/ButtonY"
                            android:layout_weight="1"
                            android:background="@drawable/harf"
                            android:gravity="center"
                            android:text="Z"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>